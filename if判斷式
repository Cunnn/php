<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <?php
	$score = 95;
    if($score >=90)
		  echo'優等';
	elseif($score<90 && $score>=80)
		  echo'甲等';
	elseif($score<80 && $score>=70)
		  echo'乙等';
	elseif($score<70 && $score>=60)
		  echo'丙等';
	elseif($score<60 && $score>=50)
		  echo'丁等';  
		    ?>
  </body>
</html>
